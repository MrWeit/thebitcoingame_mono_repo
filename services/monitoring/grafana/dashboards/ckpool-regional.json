    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Miners connected to the EU-West primary CKPool instance.",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "#E02F44", "value": null },
              { "color": "#FF9830", "value": 1 },
              { "color": "#73BF69", "value": 5 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": { "h": 5, "w": 8, "x": 0, "y": 1 },
      "id": 1,
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "textMode": "auto"
      },
      "pluginVersion": "10.3.1",
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "editorMode": "code",
          "expr": "ckpool_connected_miners{region=\"eu-west\"}",
